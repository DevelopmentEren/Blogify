<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blogify - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Blogify.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Links", required: false)
    <style>
        *{
            font-family: Georgia, 'Times New Roman', Times, serif !important;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow navbar-dark bg-secondary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <h2>Blogify</h2>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" asp-action="katsec" asp-route-kat="Tümü">Tümü</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Seyahat">Seyahat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Spor">Spor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Teknoloji">Teknoloji</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Yemek">Yemek</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Dünya">Dünya</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Türkiye">Türkiye</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Güncel">Güncel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="katsec" asp-route-kat="Diğer">Diğer</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center ms-lg-4">
                        @await RenderSectionAsync("Admin", required: false)
                        <a class="btn btn-primary ms-lg-3 rounded-pill" asp-controller="Home" asp-action="BlogAdd">Yeni Blog</a>
                        <a class="btn btn-success ms-lg-3 rounded-pill text-white" asp-controller="Home" asp-action="MyBlog">Bloglarım</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Blogify - Bu Web Sayfası Muhammet Eren Çelik tarafından Web Projesi için yapılmıştır. Telif Hakları Saklıdır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/fontawesome.js" crossorigin="anonymous"></script>
    <script src="~/js/all.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
